<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\common.props" />
  <PropertyGroup>
    <TargetFrameworks>$(NetCoreAssetTFMs)</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
