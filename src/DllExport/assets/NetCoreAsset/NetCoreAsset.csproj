  <PropertyGroup>
    <DllExportIdent>61F1C79F-C74B-43F3-9341-0E45EEC34895</DllExportIdent>
    <DllExportMetaLibName>DllExport.dll</DllExportMetaLibName>
    <DllExportNamespace>io.github._3F.DllExport</DllExportNamespace>
